{
  "name": "revery-packager",
  "version": "1.0.0",
  "description": "Helper utility for packaging Revery applications",
  "license": "MIT",
  "esy": {
    "build": "refmterr dune build -p revery-packager",
    "buildsInSource": "_build"
  },
  "dependencies": {
    "ocaml": "~4.7.0",
    "@opam/dune": "1.7.3",
    "@esy-ocaml/reason": ">= 3.4.0 < 3.5.0",
    "refmterr": "*" 
  },
  "scripts": {
   "format": "bash -c \"refmt --in-place *.re\"",
   "run": "esy x App"
  },
  "devDependencies": {
    "ocaml": "~4.7.0",
    "@opam/merlin": "*"
  }
}
